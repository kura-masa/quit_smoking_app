rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Challenges can only be accessed by their owner
    match /challenges/{challengeId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    // Success logs - temporary permissive rule for existing data without userId
    match /successLogs/{logId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || !('userId' in resource.data));
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
  }
}